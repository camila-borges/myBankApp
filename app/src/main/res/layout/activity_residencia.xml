<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/residenciaActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="20dp"
    tools:context="com.example.camila.mybank.ResidenciaActivity">


    <TextView
        android:id="@+id/TextViewResidencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="RESIDÊNCIA"
        android:textColor="#379b85"
        android:textSize="25dp" />

    <RadioGroup
        android:id="@+id/RadioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewResidencia"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewVeiculoQ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado do Imóvel: " />

        <RadioButton
            android:id="@+id/RadioButtonResidenciaNovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:checked="true"
            android:text="Novo" />

        <RadioButton
            android:id="@+id/RadioButtonResidenciaUsado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Usado" />
    </RadioGroup>

    <EditText
        android:id="@+id/EditTextResidenciaPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RadioGroup2"
        android:layout_marginBottom="20dp"
        android:hint="Valor do imóvel"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/EditTextResidenciaEntrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextResidenciaPreco"
        android:layout_marginBottom="20dp"
        android:hint="Porcentagem de entrada"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/EditTextResidenciaParcelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextResidenciaEntrada"
        android:layout_marginBottom="20dp"
        android:hint="Quantidade de parcelas"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/EditTextResidenciaRendaMensal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextResidenciaParcelas"
        android:layout_marginBottom="20dp"
        android:hint="Renda líquida mensal"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/ButtonVeiculoCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextResidenciaRendaMensal"
        android:layout_centerHorizontal="true"
        android:background="#379b85"
        android:text="CALCULAR"
        android:textColor="#FFF" />


</RelativeLayout>
